<style>
  .navbar-nav a{
    text-decoration:none;
    color:white;
  }
  .container-fluid{
    padding:10px;
  }
  .header{
    font-size:30px;
    font-weight:bold;
    margin:10px;
    text-decoration: none;
    color: white; 
  }
  .subHeader{
    font-size:18px;
    margin:5px;
    color:white;
  }
  .subHeader:hover{
    color:blue;
    
  }
  .logOutbtn{
    border:none;
    background-color:#212529;
    color:white;
    font-size:18px;
  }
  .logOutbtn:hover{
    color:blue;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to "BLOG", root_path, class:'header'%>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path, class:'subHeader'%>
        </li>
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "SignUp", new_user_registration_path, class:'subHeader'%>
          </li>
        <% end %>
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "SignIn", new_user_session_path, class:'subHeader'%>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Edit Profile", edit_user_registration_path, class:'subHeader'%>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= button_to "LogOut", destroy_user_session_path, method: :delete, class:'logOutbtn' %>
          </li>
        <% end %>

        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "MyArticles", myarticles_path(current_user.id), class:'subHeader' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>